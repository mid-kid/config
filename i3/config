# Modifiers
set $mod Mod1
set $alt Mod4

# Settings
font pango:DejaVu Sans Mono 8
new_window pixel
new_float pixel
hide_edge_borders both

# Manage applications
bindsym $mod+Return exec urxvt
bindsym $mod+w exec --no-startup-id i3-dmenu-desktop
bindsym $mod+q kill

# Manage windows
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $alt+h move left
bindsym $alt+j move down
bindsym $alt+k move up
bindsym $alt+l move right

# Focus
bindsym $alt+a focus parent
bindsym $alt+d focus child

# Split
bindsym $mod+a split h
bindsym $mod+s split v
bindsym $mod+d layout toggle split

# Change container layout
bindsym $mod+z layout stacking
bindsym $mod+x layout tabbed
bindsym $mod+f fullscreen

# Floating
bindsym $mod+space floating toggle
bindsym $alt+space focus mode_toggle
floating_modifier $mod

# Workspaces
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $alt+1 move container to workspace 1
bindsym $alt+2 move container to workspace 2
bindsym $alt+3 move container to workspace 3
bindsym $alt+4 move container to workspace 4
bindsym $alt+5 move container to workspace 5
bindsym $alt+6 move container to workspace 6
bindsym $alt+7 move container to workspace 7
bindsym $alt+8 move container to workspace 8
bindsym $alt+9 move container to workspace 9
bindsym $alt+0 move container to workspace 10

# Session management
bindsym $alt+e reload
bindsym $alt+w restart
bindsym $alt+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Resize dem stuffz
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Escape mode "default"
}
bindsym $mod+e mode "resize"

bar {
        status_command i3status
}
