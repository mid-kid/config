# Variables
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term i3-sensible-terminal
set $menu rofi -cache-dir ~/.local/share/rofi -show drun

# Look
font pango:monospace 10
default_border pixel 3
default_floating_border normal 3
for_window [all] title_window_icon yes
gaps inner 5
gaps outer 3
smart_borders on

# External programs
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec --no-startup-id $term -name floating
bindsym $mod+space exec --no-startup-id dunstctl close
bindsym $mod+Shift+space exec --no-startup-id dunstctl close-all
bindsym $mod+d exec $menu
bindsym $mod+Shift+d exec i3-sensible-terminal -e ranger
bindsym $mod+v exec pavucontrol
bindsym $mod+Shift+v exec --no-startup-id mpv --force-window=immediate $(xclip -sel clip -o)
bindsym $mod+i exec rofi-pass
bindsym $mod+Ctrl+o exec --no-startup-id ~/.config/scripts/extscreens
bindsym $mod+Ctrl+p exec ~/.config/scripts/power
bindsym XF86Display exec --no-startup-id ~/.config/scripts/extscreens
bindsym XF86PowerOff exec ~/.config/scripts/power
bindsym Print exec --no-startup-id ~/.config/scripts/screenshot -s
bindsym Shift+Print exec --no-startup-id ~/.config/scripts/screenshot
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id ~/.config/scripts/appvol +2%
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id ~/.config/scripts/appvol -2%
bindsym Shift+XF86AudioMute exec --no-startup-id ~/.config/scripts/appvol mute
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86Tools exec --no-startup-id playerctl play-pause
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop exec --no-startup-id playerctl stop
bindsym XF86Calculator exec --no-startup-id i3-sensible-terminal -name floating -e 'python'

